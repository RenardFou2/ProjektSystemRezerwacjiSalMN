@page
@model ProjektSystemRezerwacjiSalMN.Pages.Debugging.Buildings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Buildings</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].ZIPCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].StreetNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Building) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZIPCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-page="./BuildingRoom" asp-route-id="@item.Id">List of rooms</a>
            </td>
        </tr>
}
    </tbody>
</table>
